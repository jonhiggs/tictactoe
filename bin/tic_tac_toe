#!/usr/bin/env python
import sys
import os
sys.path.append(
    os.path.realpath( os.path.dirname(__file__) + '/../lib/')
)

from game import *
import human
from random import shuffle

print "\nWelcome to Tic Tac Toe! \n"

tokens = [ "X", "O" ]
board = Board()

players = []
for i in range(0,2):
    player = human.Human()
    player.token = tokens.pop()
    players.append(player)

game = Game(players)

while not game.over:
    print player.token
    game.move
    game.board

    if player.won:
        print "congradulations %s, you won" % player.token
        break

    game.next_player
